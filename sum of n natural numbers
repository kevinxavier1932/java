import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int sum1=0;
        for(int i=1;i<=a;i++){
          int sum=sum1+i;
            sum1=sum;
            
    
    }
        System.out.print(sum1);
}
}
